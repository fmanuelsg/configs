:verbose: true

# Avoid docs in all cases. Is extremely slow. :-/
gem: --no-document
# People say this is deprecated and the above should work. Let's have the two
# since system's Ruby is old.
install: --no-ri --no-rdoc
update: --no-ri --no-rdoc

