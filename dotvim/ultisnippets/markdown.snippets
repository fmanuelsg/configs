snippet h1 "Level 1 header" !b
${1:${VISUAL:Level 1 header/=|-//mg}}
${1/./=/g}
$0
endsnippet

snippet h2 "Level 2 header" !b
${1:${VISUAL:Level 2 header}}
${1/./-/g}
$0
endsnippet

snippet a "Anchor link"
[${1:${VISUAL:Text}}](${2:http://${3:www.url.com}})$0
endsnippet

snippet img "Image"
![${1:pic alt}](${2:path}${3/.+/ "/}${3:opt title}${3/.+/"/})$0
endsnippet

# Fix the syntax highlighting in UltiSnips
snippet code "Fenced code block" !b
\`\`\`${1:language}
${VISUAL}$0
\`\`\`
endsnippet
